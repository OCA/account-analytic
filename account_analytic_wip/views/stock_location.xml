<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_location_form_inherit" model="ir.ui.view">
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form" />
        <field name="arch" type="xml">

            <field name="valuation_out_account_id" position="after">
                <div colspan="2" class="alert alert-info mt16" role="status">
                    <p><b>Manufacturing WIP</b></p>
                    <p>
                    Set accounts for raw material WIP:
                    <ul>
                        <li><b>Stock Input Account</b> is used for the WIP account.</li>
                        <li><b
                                >Stock Output Account</b> is used for the production differences/variation.</li>
                    </ul>
                    </p>
                </div>
            </field>

        </field>
    </record>
</odoo>
