<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='monitor_product_margins']/.." position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="always_use_product_analytic_account"
                >
                    <div class="o_setting_left_pane">
                        <field name="group_always_use_product_analytic_account" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            for="group_always_use_product_analytic_account"
                            string="Always use product analytic"
                        />
                        <div class="text-muted">
                            Always set analytic accounts on invoice lines to product analytic account
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
