<odoo>

    <record id="view_account_analytic_line_tree" model="ir.ui.view">
        <field name="name">account.analytic.line.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="user_currency_id" invisible="1"/>
            </field>
            <field name="amount" position="before">
                <field name="user_amount" groups="base.group_multi_currency"/>
            </field>
            <field name="amount" position="attributes">
                <attribute name="sum" eval=""/>
            </field>
        </field>
    </record>

    <record id="view_account_analytic_line_filter" model="ir.ui.view">
        <field name="name">account.analytic.line.select</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_filter"/>
        <field name="arch" type="xml">
            <group position="before">
                <field name="currency_id"/>
            </group>
            <group position="inside">
                <filter string="Currency" context="{'group_by':'currency_id'}" name="groupby_currency_id"/>
            </group>
        </field>
    </record>

</odoo>
